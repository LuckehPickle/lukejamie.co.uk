<%= link_to admin_user_path(user), class: 'admin-list-item' do %>

    <!-- User information -->
    <div class="grow">
        <p id="user-name">
            <%= user.name %>

            <% if user.confirmed_at.nil? %>
                <span class="list-badge" title="This user has not yet confirmed their email address.">unconfirmed</span>
            <% end %>

            <% if user.admin? %>
                <span class="list-badge" id="admin-badge" title="This user is an administrator">admin</span>
            <% end %>

            <% if user.order_count != 0 %>
                <span class="list-badge" id="user-orders-badge" title="This user has made <%= pluralize user.order_count, 'order' %>">
                    <%= pluralize user.order_count, 'order' %>
                </span>
            <% end %>
        </p>
        <p><%= user.email %></p>
    </div>

    <!-- Dates -->
    <div>
        <p>Joined <%= local_time_ago user.created_at %></p>
    </div>

<% end %>