<%= form_for [:admin, @promo_code], html: { class: 'admin-content-form'} do |f| %>

    <%= render partial: 'application/form-errors', locals: { object: @promo_code } %>

    <div class="input-wrapper">
        <%= f.label :code %>
        <p class="hint">Should be alphanumeric.</p>
        <div class="input icon-input">
            <i class="material-icons">&#xE53F;</i>
            <%= f.text_field :code, autofocus: true, id: 'promo-code-input' %>
        </div>
    </div>

    <div class="input-wrapper">
        <%= f.label :label %>
        <p class="hint">Provide a brief description of this code.</p>
        <div class="input icon-input">
            <i class="material-icons">&#xE892;</i>
            <%= f.text_field :label %>
        </div>
    </div>

    <div class="input-wrapper">
        <%= f.label :discount %>
        <p class="hint">As a percentage.</p>
        <div class="input symbol-input">
            <%= f.number_field :discount, min: '0', max: '100' %>
            <span class="symbol">%</span>
        </div>
    </div>

    <div class="conjoined">

        <div class="input-wrapper">
            <%= f.label :start_date %>
            <div class="input">
                <%= f.date_field :start_date, class: 'flatpickr' %>
            </div>
        </div>

        <div class="input-wrapper">
            <%= f.label :finish_date %>
            <div class="input">
                <%= f.date_field :finish_date, class: 'flatpickr' %>
            </div>
        </div>

    </div>

    <div class="buttons">
        <%= f.submit @promo_code.new_record? ? 'Create' : 'Save changes', class: 'button' %>
        <%= link_to 'Cancel', admin_promo_codes_path, class: 'button button-secondary' %>
    </div>

<% end %>