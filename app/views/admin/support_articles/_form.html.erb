<%= form_for [:admin, @article], html: { class: 'admin-content-form'} do |f| %>

    <%= render partial: 'application/form-errors', locals: { object: @article } %>

    <div class="input-wrapper">
        <%= f.label :title %>
        <p class="hint">Must be unique.</p>
        <div class="input icon-input">
            <i class="material-icons">&#xE264;</i>
            <%= f.text_field :title, autofocus: true %>
        </div>
    </div>

    <div class="input-wrapper">
        <%= f.label :category %>
        <div class="input select-input">
            <i class="material-icons">&#xE2C7;</i>
            <%= f.select :category, SupportArticle.categories.keys.map { |category| [category.titleize, category]} %>
        </div>
    </div>

    <div class="input-wrapper">
        <%= f.label :description %>
        <p class="hint">Give a more in depth explanation about what this article is about.</p>
        <div class="input">
            <%= f.text_area :description %>
        </div>
    </div>

    <div class="input-wrapper">
        <%= f.label :body %>
        <p class="hint">Markdown is supported. See <a href="https://guides.github.com/features/mastering-markdown/#syntax" target="_blank">this guide</a> for help.</p>

        <div class="input">
            <%= f.text_area :body, class: 'CodeMirror' %>
        </div>
    </div>

    <div class="buttons">
        <%= f.submit @article.new_record? ? 'Create' : 'Save changes', class: 'button' %>
        <%= link_to 'Cancel', admin_support_articles_path, class: 'button button-secondary' %>
    </div>

<% end %>