<%= form_for [:admin, @article], html: { class: 'admin-content-form'} do |f| %>

    <%= render partial: 'application/form-errors', locals: { object: @article } %>

    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :category %>
        <%= f.select :category, SupportArticle.categories.keys.map { |category| [category.titleize, category]} %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>

    <div>
        <%= f.label :body %>
        <p>Markdown is supported. See <a href="https://guides.github.com/features/mastering-markdown/#syntax" target="_blank">this guide</a> for help.</p>
        <%= f.text_area :body, class: 'CodeMirror' %>
    </div>

    <div class="buttons">
        <%= f.submit @article.new_record? ? 'Create article' : 'Update article', class: 'button' %>
        <%= link_to 'Cancel', admin_support_articles_path, class: 'button button-secondary' %>
    </div>

<% end %>