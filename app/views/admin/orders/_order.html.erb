<%= link_to admin_order_path(order), class: 'admin-list-item' do %>

    <!-- Order information -->
    <div class="grow">
        <p id="order-reference">
            #<%= order.reference %>
            <% if order.processing? %>
                <span class="list-badge" id="needs-shipping-badge" title="This order is currently awaiting shipping.">needs shipping</span>
            <% elsif order.returned? %>
                <span class="list-badge" id="returned-badge" title="This order has been returned.">returned</span>
            <% elsif order.refunded? %>
                <span class="list-badge" id="refunded-badge" title="This order has been refunded.">refunded</span>
            <% end %>
        </p>
        <p>Ordered <%= local_time_ago order.created_at %></p>
    </div>

    <div style="text-align: right;">
        <p id="order-user">Ordered by <span><%= order.user.name %></span></p>
        <p>Includes <%= pluralize order.quantity, 'items' %></p>
    </div>

<% end %>